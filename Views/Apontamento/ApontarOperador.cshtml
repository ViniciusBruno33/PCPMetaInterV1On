@model PCPMetalurgicaInter.Models.Apontamento

@{
    ViewData["TituloPagina"] = "Geração de Apontamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/apontamentoCadastrar.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
}

<main class="container py-4 ">
        @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    <!--INPUTS1-->
    <div class="card    p-4">
        <form asp-controller="Apontamento" asp-action="ApontarOperador" method="post">

        <div class="row g-3 mb-3" >
            <div class="col-4">
                <label class="form-label" style="font-size: larger;">Ordem De Producao</label>
                <input asp-for="OrdemDeProducaoId" type="text" class="form-control form-control-lg" />
            </div>
            <div class="col-4">
                <label class="form-label" style="font-size: larger;">Operação</label>
                <select id="OperacaoId" asp-for="OperacaoId" asp-items="@ViewBag.SelectOperacao" class="form-control form-control-lg">
                    <option value=""></option>
                </select>
            </div>
            <div class="col-4">
                <label class="form-label" style="font-size: larger;">Quantidade (apenas para finalizar)</label>
                <input asp-for="Quantidade" type="number" class="form-control form-control-lg" />
            </div>
            
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>

        </form>
    </div>
</main>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializa o Select2
            $('#OperacaoId').select2({
                placeholder: "Selecione uma Operação",
                allowClear: true
            });
        });
    </script>
}
