@model PCPMetalurgicaInter.Models.TipoDeOperacao

@{
    ViewData["TituloPagina"] = "Cadastro de Tipo de Operações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cadastroTipoDeOperacao.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
}

<main class="container py-4">
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }
    <div class="card    p-4">
        <form asp-controller="TipoDeOperacao" asp-action="Editar" method="post">
            <div class="row g-3 mb-3">
                <div class="col-md">
                    <label class="form-label fs-5">ID</label>
                    <div class="input-group">
                        <input type="text" asp-for="Id" value="@Model.Id" class="form-control form-control-lg" aria-describedby="button" readonly />
                        <a class="botao-pesquisar" asp-controller="TipoDeOperacao" asp-action="Consultar" onclick="return false;">
                            <i class="fas fa-search icone-hover" style="font-size: 20px;"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md">
                    <label class="form-label fs-5">Descrição</label>
                    <input value="@Model.Descricao" asp-for="Descricao" class="form-control form-control-lg" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</main>